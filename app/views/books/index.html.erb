<script>$.vegas({src:'http://s25.postimg.org/q56rsyujz/book_collection.jpg'});</script>

<div class="container">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <img data-src=<%= image_submit_tag('blank-book.jpg') %>
          <div class="caption">
            <h3><%= link_to book.title, book %></h3>
            <p><%= book.format %></p>
            <p><%= book.author %></p>
            <p><%= book.length %> pages</p>
            <p>Released in <%= book.release_year %></p>
            <p>Rating: <%= book.rating %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
