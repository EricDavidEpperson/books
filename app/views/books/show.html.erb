<script>$.vegas({src:'<%= @book.photo %>'});</script>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
      <div class="thumbnail" style="background-color: #ecf0f1">
        <div class="caption">
          <h1><%= @book.title %></h1>
          <p>Format: <%= @book.format %></p>
          <p>Author: <%= @book.author %></p>
          <p>Pages: <%= @book.length %> pages</p>
          <p>Released in <%= @book.release_year %></p>
          <p>Rating: <%= @book.rating %></p>
          <p>Description: <%= @book.description %></p>
          <% if user_signed_in? %>
            <p><%= link_to "Edit", edit_book_path(@book) %> |
              <%= link_to "Delete", book_path(@book), method: :delete, "data-confirm"=>"Are you sure?" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
